name: debian-spack-develop

on:
  # Trigger the workflow on push or pull request,
  # but only for the spack-develop branch
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  jobs:

  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - name: Build the Docker image
      run: make oommf-spack --build-arg SPACK_VERSION=v0.16.3
